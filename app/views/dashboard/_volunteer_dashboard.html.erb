<div class="row">
  <div class="col-sm-12 dashboard-table-header">
# frozen_string_literal: true
'Case'.pluralize(@casa_cases.count)
 %></h1>
  </div>
</div>
<table class="table case-list">
  <thead>
  <tr>
    <th>Case Number</th>
    <th>Transition Aged Youth</th>
    <th>Actions</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
# frozen_string_literal: true
@casa_cases.each
 do |casa_case| %>
    <tr>
# frozen_string_literal: true
casa_case.case_number
 %></td>
# frozen_string_literal: true
casa_case.decorate.transition_aged_youth_icon
 %></td>
# frozen_string_literal: true
link_to 'Edit', edit_casa_case_path(casa_case)
 %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<div class="row">
  <div class="col-sm-12 dashboard-table-header">
    <h1>Case Contacts</h1>
    <% if policy(:dashboard).create_case_contacts? %>
# frozen_string_literal: true
link_to 'New Case Contact', new_case_contact_path, class: 'btn btn-primary'
 %>
    <% end %>
  </div>
</div>

# frozen_string_literal: true
@casa_cases.each
 do |casa_case| %>
  <table class="table case-contacts-table" id="case_contacts">
    <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Contact Made</th>
      <th>Contact Medium</th>
      <th>Type</th>
      <th>Miles Driven</th>
      <th>Want reimbursement?</th>
      <th>Created by</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
# frozen_string_literal: true
casa_case.decorate.case_contacts_ordered_by_occurred_at.each
 do |contact| %>
# frozen_string_literal: true
render 'case_contacts/case_contact', contact: contact
 %>
    <% end %>
    </tbody>
  </table>
<% end %>
