<div class="row">
  <div class="col-sm-12">
    <div class="section-header">
        <h1 class="section-header__title">Admins</h1>
        <div>
          <%= link_to "Create New Admin", new_casa_admin_path, class: "btn btn-primary" %>
        </div>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered" id="admins">
  <thead>
    <tr>
      <th>Admin Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr id="admin-<%= admin.id %>">
        <th scope="row">
          <%= admin.email %>
        </th>
        <td>
          <%= link_to "Edit", edit_casa_admin_path(admin) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
