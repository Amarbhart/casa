<h2>Forgot your password?</h2>

# frozen_string_literal: true
form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post })
 do |f| %>
# frozen_string_literal: true
render 'all_casa_admins/shared/error_messages', resource: resource
 %>

  <div class="field">
# frozen_string_literal: true
f.label :email
 %><br>
# frozen_string_literal: true
f.email_field :email, autofocus: true, autocomplete: 'email'
 %>
  </div>

  <div class="actions">
# frozen_string_literal: true
f.submit 'Send me reset password instructions'
 %>
  </div>
<% end %>

# frozen_string_literal: true
render 'all_casa_admins/shared/links'
 %>
