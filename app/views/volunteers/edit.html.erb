# frozen_string_literal: true
link_to 'Back', root_path
 %>

<h1>Editing Volunteer</h1>

<div class="row">
  <div class="col-sm-6">
# frozen_string_literal: true
form_for @volunteer, url: volunteer_path(@volunteer)
 do |form| %>
      <% if @volunteer.errors.any? %>
        <div id="error_explanation">
# frozen_string_literal: true
pluralize(@volunteer.errors.count, 'error')
 %> prohibited this volunteer from being saved:</h2>

          <ul>
# frozen_string_literal: true
@volunteer.errors.full_messages.each
 do |message| %>
# frozen_string_literal: true
message
 %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group">
# frozen_string_literal: true
form.label :email
 %>
        <% if policy(:volunteer).update_volunteer_email? %>
# frozen_string_literal: true
form.text_field :email, class: 'form-control'
 %>
        <% else %>
# frozen_string_literal: true
@volunteer.email
 %>" readonly>
        <% end %>
      </div>

      <div class="field form-group">
# frozen_string_literal: true
form.label :display_name
 %>
# frozen_string_literal: true
form.text_field :display_name, class: 'form-control'
 %>
      </div>

      <div class="field form-group">
# frozen_string_literal: true
form.label 'Start Date'
 %>
# frozen_string_literal: true
@volunteer.created_at.strftime('%m/%d/%Y ')
 %>" readonly>
      </div>

      <div class="field form-group">
        <% if @volunteer.active? %>
          Volunteer is <span class="badge badge-success text-uppercase display-1">Active</span>
          <% if policy(@volunteer).deactivate? %>
# frozen_string_literal: true
link_to 'Deactivate volunteer',
                        deactivate_volunteer_path(@volunteer),
                        method: :patch,
                        class: 'btn btn-outline-danger',
                        data:
                            { confirm: 'WARNING: Marking a volunteer inactive will make them unable to login. They will receive an email saying their account has been marked inactive. Are you sure you want to do this?'}
 %>
          <% end %>
        <% else %>
          <div class="alert alert-danger">
# frozen_string_literal: true
@volunteer.updated_at.strftime('%m-%d-%Y')
 %>
          </div>
          <% if policy(@volunteer).activate? %>
# frozen_string_literal: true
link_to 'Activate volunteer',
                        activate_volunteer_path(@volunteer),
                        method: :patch,
                        class: 'btn btn-outline-success'
 %>
          <% end %>
        <% end %>
      </div>

      <div class="actions">
# frozen_string_literal: true
form.submit 'Submit', class: 'btn btn-primary'
 %>
      </div>
    <% end %>
  </div>
</div>

<% if @volunteer.casa_cases.present? %>
  <br>
  <div class="row">
    <div class="col-sm-12">
      <h3>Assigned Cases</h3>
      <table class='table case-list'>
        <thead>
          <tr>
            <th>Case Number</th>
            <th>Transition Aged Youth</th>
            <th>Assignment status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
# frozen_string_literal: true
@volunteer.case_assignments.each
 do |assignment| %>
            <tr>
# frozen_string_literal: true
link_to assignment.casa_case.case_number, casa_case_path(assignment.casa_case)
 %></td>
# frozen_string_literal: true
assignment.casa_case.decorate.transition_aged_youth_icon
 %></td>
              <td>
                <% if @volunteer.active? %>
                  Volunteer is <span class="badge badge-success text-uppercase display-1">Active</span>
                <% else %>
                  Deactivated
                <% end %>
              </td>
              <td>
                <% if @volunteer.active? %>
# frozen_string_literal: true
if Pundit.policy(current_user, @volunteer).unassign_case?
                        button_to 'Unassign Case', case_assignment_path(assignment, volunteer_id: @volunteer.id), method: :delete, class: "btn btn-danger"
                      end
 %>
                <% else %>
                  None
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<% if @volunteer.active? %>
  <br>

  <div class="row">
    <div class="col-sm-6">
      <h3>Assign a New Case</h3>

# frozen_string_literal: true
form_for CaseAssignment.new, url: case_assignments_path(volunteer_id: @volunteer.id)
 do |form| %>

        <div class='form-group'>
          <label for='case_assignment_casa_case_id'>Select a Case</label>
          <select id="case_assignment_casa_case_id" name='case_assignment[casa_case_id]' class='form-control'>
# frozen_string_literal: true
@available_casa_cases.each
 do |casa_case| %>
# frozen_string_literal: true
casa_case.case_number
 %></option>
            <% end %>
          </select>
        </div>

# frozen_string_literal: true
form.submit 'Assign Case', class: 'btn btn-primary'
 %>
      <% end %>
    </div>
  </div>
<% end %>
