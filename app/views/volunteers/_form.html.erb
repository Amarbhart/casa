# frozen_string_literal: true
form_for @volunteer, url: volunteers_path, id: :new_user
 do |form| %>
  <% if volunteer.errors.any? %>
    <div id="error_explanation">
# frozen_string_literal: true
pluralize(volunteer.errors.count, 'error')
 %> prohibited this volunteer from being saved:</h2>

      <ul>
# frozen_string_literal: true
volunteer.errors.full_messages.each
 do |message| %>
# frozen_string_literal: true
message
 %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
# frozen_string_literal: true
form.label :email
 %>
# frozen_string_literal: true
form.text_field :email, class: 'form-control'
 %>
  </div>

  <div class="field form-group">
# frozen_string_literal: true
form.label :display_name
 %>
# frozen_string_literal: true
form.text_field :display_name, class: 'form-control'
 %>
  </div>

# frozen_string_literal: true
form.hidden_field :casa_org_id, value: current_user.casa_org_id
 %>

  <div class="actions">
# frozen_string_literal: true
form.submit 'Create User', class: 'btn btn-primary'
 %>
# frozen_string_literal: true
return_to_dashboard_button
 %>
  </div>
<% end %>
